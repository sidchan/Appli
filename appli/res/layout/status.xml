<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:weightSum="1" android:background="@drawable/image">
    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:text="Twitter status update" android:id="@+id/textView1" android:layout_weight="0.14" android:textStyle="bold" android:textColor="#000"></TextView>
    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:hint="@string/hintstatus" android:background="#309f" android:id="@+id/editText1" android:layout_weight="0.89"></EditText>
    <Button android:id="@+id/button1" android:text="UPDATE" android:layout_width="match_parent" android:layout_weight="0.14" android:layout_height="wrap_content" android:gravity="top"></Button>
    
</LinearLayout>
